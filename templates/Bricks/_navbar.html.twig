<div class="d-flex justify-content-center">
    <a href="{{ path('index') }}">
        <img src="{{ asset("build/images/CocktailParty.png") }}" alt="logo-cocktail" height="140">
    </a>
</div>
<nav class="navbar navbar-light navbar-expand-md justify-content-center">
    <button class="navbar-toggler ml-1" type="button" data-toggle="collapse" data-target="#collapsingNavbar2">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse collapse justify-content-between align-items-center w-100" id="collapsingNavbar2">
        <ul class="navbar-nav mx-auto text-center">
            {% for category in categories %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('category_index', { 'id' : category.id }) }}">{{ category.name }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
</nav>
