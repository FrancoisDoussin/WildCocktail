{% extends 'base.html.twig' %}

{% block title %}Cocktail Selector{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-4">
            <h2>Select Your Cocktail</h2>
            <div class=" col-12">
                <div class="form-group">
                    <select class="form-control" id="cocktail-selector">
                        {% for cocktail in cocktails %}
                            <option value="{{ cocktail.id }}">{{ cocktail.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="col-12" id="cocktail-content"></div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('cocktail-selector') }}
{% endblock %}
